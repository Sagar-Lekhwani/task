<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TaskMaster</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <div id="main">
        <div id="header">
          <h1>Task Master</h1>
        </div>
        <div id="center">
          <div id="head">
            <a href="/" class="back">Back</a>
            Admin Panel
          </div>
          <div id="table">
            <h1>User's Information</h1>
            <div id="info">
              <h2>Name : <%= user.name %></h2>
              <h2>Id : <%= user._id %></h2>
              <h2>Contact : <%= user.number %></h2>
              <h2>Email : <%= user.email %></h2>
            </div>
            <h1 style="margin-top: 20px;">Tasks Alloted</h1>
            <div id="alot">
              <div class="col3">
                <h3>Task Name</h3>
                <h3>Task ID</h3>
                <h3>Task Status</h3>
              </div>
              <%user.tasks.forEach(function (task) { %>
               <div class="rows3">
                <h3><%= task.name %></h3>
                <h3><%= task._id %></h3>
                <h3><%= task.status %></h3>
               </div>
               <% })%>
            </div>
          </div>
        </div>
      </div>
</body>
</html>